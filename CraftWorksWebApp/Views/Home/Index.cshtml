@{
    ViewBag.Title = "Home Page";
}

<style>
    body {
        background-image: url('../image/WallpaperBackground.jpg');
    }

    .jumbotron {
        text-align: center;
        background-color: #f8f9fa;
        padding: 60px;
        margin-bottom: 0;
        border-bottom: 1px solid #ccc;
    }

        .jumbotron h1 {
            font-size: 48px;
            color: #4faee3;
            margin-bottom: 20px;
        }

        .jumbotron p {
            font-size: 18px;
            color: #6c757d;
        }

    .btn-primary {
        background-color: #4faee3;
        border-color: #4faee3;
        color: #fff;
    }

        .btn-primary:hover {
            background-color: #0000FF;
            border-color: #0000FF;
        }

    .jumbotron .btn-secondary {
        background-color: #ffc107;
        border-color: #ffc107;
        color: #343a40;
    }

        .jumbotron .btn-secondary:hover {
            background-color: #e0a800;
            border-color: #e0a800;
        }

    .jumbotron .btn-tertiary {
        background-color: #007bff;
        color: #fff;
    }

        .jumbotron .btn-tertiary:hover {
            background-color: #0056b3;
            border-color: #0056b3;
        }
</style>

<div class="jumbotron">
    <h1>Welcome to KhumaloCraft!</h1>
    <p>@ViewBag.MissionStatement</p>
    <p><a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a></p>
</div>

